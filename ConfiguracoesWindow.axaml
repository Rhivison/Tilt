<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="TiltMachine.ConfiguracoesWindow"
        Title="ConfiguraÃ§Ãµes"
        Width="750"
