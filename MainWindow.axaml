<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="TiltMachine.MainWindow"
        Title="Software Tilting Table Test"
        Width="1000" Height="700"
        CanResize="False"
        Icon="/Assets/blzIcone_no_background.ico"
        Background="#A9A9A9"
        WindowState="Maximized">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Menu Superior -->
        <Border Grid.Row="0" Background="#D3D3D3" BoxShadow="0 2 8 0 #15000000">
            <Menu Background="Transparent" Padding="15,10">
                <!--<MenuItem Header="_Ensaios" Click="EnsaiosButton_Click" FontSize="14"/>-->
            </Menu>
        </Border>

        <!-- Header com Título e Status -->
        <Border Grid.Row="1" Background="#D3D3D3" Margin="30,20,30,0" CornerRadius="16" 
                BoxShadow="0 4 20 0 #10000000" Padding="40">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock Text="Software Tilting Table Test" FontSize="32" FontWeight="SemiBold" 
                              Foreground="#2C3E50"/>
                    <!--<TextBlock Text="Sistema de controle para mesa basculante" FontSize="16" 
                              Foreground="#7F8C8D" Margin="0,5,0,0"/>-->
                </StackPanel>
                
                <Border Grid.Column="1" Background="#D3D3D3" CornerRadius="25" Padding="15,10">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Ellipse x:Name="StatusIndicator" Width="14" Height="14" Fill="#E74C3C" Margin="0,0,10,0"/>
                        <StackPanel>
                            <TextBlock Text="Status" FontSize="12" Foreground="#7F8C8D" FontWeight="Medium"/>
                            <TextBlock x:Name="StatusLabel" Text="Desconectado" FontSize="14" 
                                       FontWeight="SemiBold" Foreground="#E74C3C"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Área Principal com Botões -->
        <Grid Grid.Row="2" Margin="30,30,30,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Cards de Navegação -->
            <Grid Grid.Row="0" VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="20"/>
                </Grid.RowDefinitions>

                <!-- Card Amostras -->
                <Border Grid.Column="0" Background="#D3D3D3" CornerRadius="16" Margin="10"
                        BoxShadow="0 4 20 0 #10000000" Cursor="Hand">
                    <Button Background="Transparent" BorderThickness="0" Padding="0" 
                            Click="AmostraButton_Click" CornerRadius="16">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="25">
                            <Border Background="#E3F2FD" CornerRadius="50" Width="80" Height="80" 
                                   Margin="0,0,0,20">
                                <Image Source="avares://TiltMachine/Assets/amostras.png" Width="40" Height="40"/>
                            </Border>
                            <TextBlock Text="Amostras" FontSize="18" FontWeight="SemiBold" 
                                      HorizontalAlignment="Center" Foreground="#2C3E50"/>
                            <TextBlock Text="Gerenciar amostras" FontSize="13" 
                                      HorizontalAlignment="Center" Foreground="#7F8C8D" 
                                      Margin="0,5,0,0"/>
                        </StackPanel>
                    </Button>
                </Border>

                <!-- Card Operação -->
                <Border Grid.Column="1" Background="#D3D3D3" CornerRadius="16" Margin="10"
                        BoxShadow="0 4 20 0 #10000000" Cursor="Hand">
                    <Button Background="Transparent" BorderThickness="0" Padding="0" 
                            Click="OperacaoButton_OnClick" CornerRadius="16">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="25">
                            <Border Background="#E8F5E8" CornerRadius="50" Width="80" Height="80" 
                                   Margin="0,0,0,20">
                                <Image Source="avares://TiltMachine/Assets/preteste.png" Width="40" Height="40"/>
                            </Border>
                            <TextBlock Text="Operação" FontSize="18" FontWeight="SemiBold" 
                                      HorizontalAlignment="Center" Foreground="#2C3E50"/>
                            <TextBlock Text="Controlar sistema" FontSize="13" 
                                      HorizontalAlignment="Center" Foreground="#7F8C8D" 
                                      Margin="0,5,0,0"/>
                        </StackPanel>
                    </Button>
                </Border>

                <!-- Card Calibração -->
                <Border Grid.Column="2" Background="#D3D3D3" CornerRadius="16" Margin="10"
                        BoxShadow="0 4 20 0 #10000000" Cursor="Hand">
                    <Button Background="Transparent" BorderThickness="0" Padding="0" 
                            Click="CalibracaoButton_OnClick" CornerRadius="16">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="25">
                            <Border Background="#FFF3E0" CornerRadius="50" Width="80" Height="80" 
                                   Margin="0,0,0,20">
                                <Image Source="avares://TiltMachine/Assets/config.png" Width="40" Height="40"/>
                            </Border>
                            <TextBlock Text="Calibração" FontSize="18" FontWeight="SemiBold" 
                                      HorizontalAlignment="Center" Foreground="#2C3E50"/>
                            <TextBlock Text="Calibrar sensores" FontSize="13" 
                                      HorizontalAlignment="Center" Foreground="#7F8C8D" 
                                      Margin="0,5,0,0"/>
                        </StackPanel>
                    </Button>
                </Border>

                <!-- Card Sair -->
                <Border Grid.Column="3" Background="#D3D3D3" CornerRadius="16" Margin="10"
                        BoxShadow="0 4 20 0 #10000000" Cursor="Hand">
                    <Button Background="Transparent" BorderThickness="0" Padding="0" Click="Sair_OnClick" CornerRadius="16">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="25">
                            <Border Background="#FFEBEE" CornerRadius="50" Width="80" Height="80" 
                                   Margin="0,0,0,20">
                                <Image Source="avares://TiltMachine/Assets/sair.png" Width="40" Height="40"/>
                            </Border>
                            <TextBlock Text="Sair" FontSize="18" FontWeight="SemiBold" 
                                      HorizontalAlignment="Center" Foreground="#2C3E50"/>
                            <TextBlock Text="Fechar aplicação" FontSize="13" 
                                      HorizontalAlignment="Center" Foreground="#7F8C8D" 
                                      Margin="0,5,0,0"/>
                        </StackPanel>
                    </Button>
                </Border>
            </Grid>

            <!-- Área de informações adicionais -->
            <Border Grid.Row="1" Background="#D3D3D3" CornerRadius="12" Margin="10,20,10,0" 
                    Padding="20" BoxShadow="0 2 10 0 #10000000">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="1" HorizontalAlignment="Center"
                                Cursor="Hand"
                                PointerPressed="OnSobreClick">
                        <TextBlock Text="🔧" FontSize="20" HorizontalAlignment="Center"/>
                        <TextBlock Text=" Sobre o Sistema" FontWeight="SemiBold" HorizontalAlignment="Center" 
                                  Margin="0,5,0,0"/>
                        <TextBlock Text="v1.0.0" FontSize="12" Foreground="#7F8C8D" 
                                  HorizontalAlignment="Center"/>
                    </StackPanel>
                    
                    <!--<StackPanel Grid.Column="1" HorizontalAlignment="Center">
                        <TextBlock Text="📊" FontSize="20" HorizontalAlignment="Center"/>
                        <TextBlock Text="Última Calibração" FontWeight="SemiBold" 
                                  HorizontalAlignment="Center" Margin="0,5,0,0"/>
                        <TextBlock Text="Não realizada" FontSize="12" Foreground="#7F8C8D" 
                                  HorizontalAlignment="Center"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                        <TextBlock Text="⚡" FontSize="20" HorizontalAlignment="Center"/>
                        <TextBlock Text="Modo" FontWeight="SemiBold" HorizontalAlignment="Center" 
                                  Margin="0,5,0,0"/>
                        <TextBlock Text="Manual" FontSize="12" Foreground="#7F8C8D" 
                                  HorizontalAlignment="Center"/>
                    </StackPanel>-->
                </Grid>
            </Border>
        </Grid>

        <!-- Rodapé -->
        <Border Grid.Row="3" Background="#2C3E50" Height="50">
            <Grid Margin="30,0">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="© 2025 Software Tilting Table" Foreground="#BDC3C7" 
                              FontSize="13"/>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" 
                           HorizontalAlignment="Right">
                    <TextBlock Text="Desenvolvido por BLZ Máquinas e Serviços LTDA" Foreground="#BDC3C7" FontSize="13"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>