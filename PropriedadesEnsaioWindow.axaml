  <Grid Margin="30">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <!-- Header -->
    <Border Grid.Row="0" Background="White" CornerRadius="16" Padding="25" Margin="0,0,0,20"
            BoxShadow="0 4 20 0 #10000000">
      <Grid>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="Auto"/>
          <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <Border Grid.Column="0" Background="#27AE60" CornerRadius="50" Width="50" Height="50" 
               Margin="0,0,20,0">
          <TextBlock Text="ðŸ“‹" FontSize="24" HorizontalAlignment="Center" 
                    VerticalAlignment="Center"/>
        </Border>
        
        <StackPanel Grid.Column="1" VerticalAlignment="Center">
          <TextBlock Text="Propriedades do Ensaio" FontSize="24" FontWeight="SemiBold" 
                    Foreground="#2C3E50"/>
          <TextBlock Text="Configure os parÃ¢metros do ensaio antes de iniciar" FontSize="14" 
                    Foreground="#7F8C8D" Margin="0,5,0,0"/>
        </StackPanel>
      </Grid>
    </Border>

    <!-- ConteÃºdo principal -->
    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
      <StackPanel Spacing="20">
        
        <!-- SeÃ§Ã£o: IdentificaÃ§Ã£o -->
        <Border Background="White" CornerRadius="12" Padding="20" 
                BoxShadow="0 2 10 0 #10000000">
          <StackPanel>
            <TextBlock Text="ðŸ·ï¸ IdentificaÃ§Ã£o" FontSize="16" FontWeight="SemiBold" 
                      Foreground="#2C3E50" Margin="0,0,0,15"/>
            
            <Grid>
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="15"/>
                <ColumnDefinition Width="150"/>
              </Grid.ColumnDefinitions>
              <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="15"/>
                <RowDefinition Height="Auto"/>
              </Grid.RowDefinitions>
              
              <StackPanel Grid.Column="0" Grid.Row="0">
                <TextBlock Text="Nome da Amostra" FontWeight="Medium" Margin="0,0,0,8" 
                          Foreground="#34495E"/>
                <TextBox x:Name="txtAmostra" Height="40" CornerRadius="8" 
                         Background="#F8F9FA" BorderBrush="#E0E0E0" BorderThickness="2"
                         Padding="12,0" FontSize="14" 
                         Watermark="Digite o nome da amostra"/>
              </StackPanel>
              
              <StackPanel Grid.Column="2" Grid.Row="0">
                <TextBlock Text="NÃºmero" FontWeight="Medium" Margin="0,0,0,8" 
                          Foreground="#34495E"/>
                <TextBox x:Name="txtAmostraNum" Text="0" Height="40" CornerRadius="8"
                         Background="#F8F9FA" BorderBrush="#E0E0E0" BorderThickness="2"
                         Padding="12,0" FontSize="14" TextAlignment="Center"/>
              </StackPanel>
              
              <StackPanel Grid.Column="0" Grid.Row="2">
                <TextBlock Text="Local do Ensaio" FontWeight="Medium" Margin="0,0,0,8" 
                          Foreground="#34495E"/>
                <TextBox x:Name="txtLocal" Height="40" CornerRadius="8"
                         Background="#F8F9FA" BorderBrush="#E0E0E0" BorderThickness="2"
                         Padding="12,0" FontSize="14" 
