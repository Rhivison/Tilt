<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="TiltMachine.PropriedadesEnsaioWindow"
        Title="Propriedades do Ensaio"
        Width="750"
        Height="650"
        CanResize="False"
